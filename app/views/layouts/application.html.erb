<!DOCTYPE html>
<html>
<head>
  <title>DevisePractice</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<nav>
  <ul>
    <% if user_signed_in? %>
      <li>
        <a href="<%= edit_user_registration_path %>">
          <img src="<%= current_user.avatar_url %>" width="50">
          <%= current_user.email %>
        </a>
      </li>
      <li><a href="<%= destroy_user_session_path %>" data-method="delete">Sign out</a></li>
    <% else %>
      <li><a href="<%= new_user_registration_path %>">Sign up</a></li>
      <li><a href="<%= new_user_session_path %>">Sign in</a></li>
    <% end %>
  </ul>
</nav>


<%= yield %>

</body>
</html>
